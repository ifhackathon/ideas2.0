!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "foundation-rails"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    = render 'partials/menu'
    - if notice
      .alert-box.text-center.success{data: {alert: true}}
        = notice
        %a.close{href: '#'} &times;
    - if alert
      .alert-box.text-center.alert{data: {alert: true}}
        = alert
        %a.close{href: '#'} &times;
    = yield
    = render 'partials/footer'
    = javascript_include_tag "application", data:{ 'turbolinks-track' => true, 'turbolinks-eval' => false } 
