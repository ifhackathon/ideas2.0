%p#notice= notice
%header.row
  .small-12.columns
    = image_tag 'http://placehold.it/1500x400&text=[stuff and img]'

%section.row
  %aside.medium-4.columns
    .author.text-center
      = image_tag @project.user.image if @project.user
      %h4= @project.user.name if @project.user
    .row
      .support
        Підтримало
        %span 14
    .row.text-center
      %a{ href:"#", class:"button radius" } Допомогти проекту

    .row.estimates
      %h4 Кошторис проекту
      %h5 Фінанси
      %table
        %tbody
          - @project.project_finance_costs.each do |finance_cost|
            %tr
              %td.first= finance_cost.name
              %td
                0 /
                = finance_cost.money
                грн
                = link_to project_user_estimate_path(project_id: @project.id, type:'finance_cost', id: finance_cost.id) do
                  %i.fi-plus



      %h5 Ресурси
      %table
        %tbody
          - @project.project_materials.each do |project_material|
            %tr
              %td.first= project_material.name
              %td
                0 /
                = project_material.quantity
                = project_material.measure
                %i.fi-plus
      %h5 Робота
      %table
        %tbody
          - @project.project_people_times.each do |project_people_time|
            %tr
              %td.first= project_people_time.name
              %td
                0 /
                = project_people_time.day
                днів


    .row
      %h4 Ключові слова
      %span.label Regular Label
      %span.label Тег2
      %span.label Тег3
      %span.label Тег4
      %span.label Regular Label
      %span.label Тег2
      %span.label Тег3
      %span.label Тег4


  .medium-8.columns
    %h1= @project.name
    %p= @project.description
    %hr
    %h4 Учасники проекту
    %ul.large-block-grid-5.medium-block-grid-4.small-block-grid-3.users-list
      %li
        .image
          = image_tag 'http://placehold.it/90x90text=[author]'
        .user
          %a{ href: '#'} user name
          %span 4кг гречки
      %li
