= simple_form_for(@project) do |f|
  = f.error_notification

  -#
  -#%ul.medium-block-grid-3.form-inputs
  -#  %li= f.input :name
  -#  %li= f.input :description
  -#  %li= f.input :status
  -#  %li= f.input :date_to

  .row
    .large-6.columns
      = f.input :name
  .row
    .large-6.columns
      = f.input :description
  .row
    .large-6.columns
      = f.input :date_to
  .row
    .large-6.columns
      = f.input :place

  %hr

  .row
    .small-2.large-4.columns
      %fieldset
        %legend Фінансові витрати

        =f.simple_fields_for :project_finance_costs do |p|
          .row
            .large-12.columns
              = p.input :name
          .row
            .large-12.columns
              = p.input :money


    .small-4.large-4.columns
      %fieldset
        %legend Інструменти/обладнання

        =f.simple_fields_for :project_materials do |p|
          .row
            .large-12.columns
              = p.input :name
          .row
            .large-12.columns
              = p.input :quantity
          .row
            .large-12.columns
              = p.input :measure


    .small-6.large-4.columns
      %fieldset
        %legend Роботи та ресурси

        =f.simple_fields_for :project_people_times do |p|
          .row
            .large-12.columns
              = p.input :name
          .row
            .large-12.columns
              = p.input :day

  .form-actions
    = f.button :submit
